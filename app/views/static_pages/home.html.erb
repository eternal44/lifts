<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="stats">
        <%= render 'shared/stats' %>
      </section>
      <section class="record_form">
        <%= render 'shared/record_form' %>
      </section>
    </aside>
  <div class="col-md-8">
    <h3> Records Feed </h3>
    <%= render 'shared/feed' %>
  </div>
</div>
<% else %>
    <div class="center jumbotron">
      <h1>Welcome to Lift Ranker</h1>

      <h2>
        Record and compare how your lifts rank privately amoung your peers or the world!
      </h2>

      <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
    </div>

    <%= link_to image_tag("rails.png", alt: "Rails logo"),
                'http://rubyonrails.org/' %>
<% end %>